<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lt.manager.dao.trade.DigitalProductBrandPositionManageDao">

    <select id="selectCoinPosition" parameterType="com.lt.manager.bean.trade.DigitalProductBrandPosition"
            resultType="com.lt.manager.bean.trade.DigitalProductBrandPosition">
        SELECT * FROM digital_product_brand_position
        <where>
            <if test="productCode != null and productCode != ''">
                AND product_code=#{productCode}
            </if>
            <if test="brandId != null and brandId != ''">
                AND brand_id =#{brandId}
            </if>
        </where>
    </select>

    <select id="selectCoinPositionForUpdate" parameterType="com.lt.manager.bean.trade.DigitalProductBrandPosition"
            resultType="com.lt.manager.bean.trade.DigitalProductBrandPosition">
        SELECT * FROM digital_product_brand_position
        <where>
            <if test="productCode != null and productCode != ''">
                AND product_code=#{productCode}
            </if>
            <if test="brandId != null and brandId != ''">
                AND brand_id=#{brandId}
            </if>
        </where>
        FOR UPDATE
    </select>


    <insert id="insertCoinPosition" parameterType="com.lt.manager.bean.trade.DigitalProductBrandPosition">
        INSERT INTO digital_product_brand_position
        (
            brand_id,
            product_code,
            buy_count,
            sell_count
        ) VALUES
            (
                #{brandId},
                #{productCode},
                #{buyCount},
                #{sellCount}
            )
    </insert>

    <update id="updateCoinPosition" parameterType="com.lt.manager.bean.trade.DigitalProductBrandPosition">
        UPDATE digital_product_brand_position
        <set>
            <if test="productCode != null and productCode != ''">
                product_code=#{productCode},
            </if>
            <if test="buyCount != null">
                buy_count=#{buyCount},
            </if>
            <if test="sellCount != null">
                sell_count=#{sellCount},
            </if>
            <if test="brandId != null and brandId != ''">
                brand_id=#{brandId}
            </if>
        </set>
        where product_code = #{productCode} and brand_id = #{brandId}
    </update>

    <delete id="deleteCoinPosition" parameterType="com.lt.manager.bean.trade.DigitalProductBrandPosition">
        DELETE FROM digital_product_brand_position
        where product_code = #{productCode} and brand_id = #{brandId}
    </delete>
</mapper>