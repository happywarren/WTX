<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
                        http://www.springframework.org/schema/beans/spring-beans.xsd
			            http://code.alibabatech.com/schema/dubbo
			            http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <!-- 提供方应用信息, 用于计算依赖关系 -->
    <dubbo:application name="lt-trades-provider"/>

    <!-- 使用multicast广播注册中心暴露服务地址 -->
    <dubbo:registry address="zookeeper://dubbo.lt:2181" />

    <!-- 用dubbo协议在20880端口暴露服务 -->
    <dubbo:protocol name="dubbo" port="20889" />

    <!-- 订单服务分布式接口 -->
    <bean id="orderScoreApiService" class="com.lt.trade.order.service.impl.OrderScoreApiServiceImpl" />
    <dubbo:service interface="com.lt.api.trade.IOrderScoreApiService" ref="orderScoreApiService" timeout="120000" retries="0"/>
    
</beans>